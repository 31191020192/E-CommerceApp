<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileProject">
        <activity
            android:name=".Category.CategoryProduct"
            android:exported="false" />
        <activity
            android:name=".Product.ProductDetail"
            android:exported="false" />
        <activity
            android:name=".History.HistoryDetail"
            android:exported="false" />
        <activity
            android:name=".History.History"
            android:exported="true" />
        <activity
            android:name=".User.EditUser"
            android:exported="false" />
        <activity
            android:name=".User.User"
            android:exported="false" />
        <activity
            android:name=".User.SignUp"
            android:exported="true" />
        <activity
            android:name=".User.SignIn"
            android:exported="true" />
        <activity
            android:name=".Cart.Cart"
            android:exported="true" />
        <activity
            android:name=".Home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>